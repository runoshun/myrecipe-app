{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "jsx": "react-native",
    "sourceMap": true,
    "outDir": "./build/",
    "rootDir": "../",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./",
    "paths": {
      "@root/*": ["../src/*"]
    },
    "moduleResolution": "node",
    "types": [ ]
  },
  "include": ["../src/**/*"]
}
